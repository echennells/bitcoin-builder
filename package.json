{
  "name": "bitcoin-builder",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm validate:content && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
